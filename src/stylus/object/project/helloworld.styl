.wrapper
	width 100vw
	height 100vh
	display flex
	justify-content center
	align-items center
	background-color: #000
	position: relative
	z-index: -3
p
	font-size 10vw
	font-weight bold
	display flex
	align-items center
	position: relative
	color: #fff
	&:before,
	&:after
		display block
		content 'Hello,World'
		position absolute
		top 0
		left 0
		height 100%
		width 100%
		opacity .8
	&:before
		color: #0ff
		z-index: -1
		animation: glitch-left 1s cubic-bezier(.25, .46, .45, .94) both infinite
	&:after
		color: #f0f
		z-index: -2
		animation: glitch-left-2 1s cubic-bezier(.25, .46, .45, .94) reverse both infinite

@keyframes glitch-left {
	0% {
		transform: translate(0)
	}
	33% {
		transform: translate(-5px, 3px)
	}
	66% {
		transform: translate(5px, -3px)
	}
	to {
		transform: translate(0)
	}
}
@keyframes glitch-left-2 {
	0% {
		transform: translate(0)
	}
	33% {
		transform: translate(-5px, -3px)
	}
	66% {
		transform: translate(5px, 2px)
	}
	to {
		transform: translate(0)
	}
}